{% comment %}
  Renders a product card

  Accepts:
  - article: {Object} Product Liquid object (optional)
  - media_aspect_ratio: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
  - show_secondary_image: {Boolean} Show the secondary image on hover. Default: false (optional)
  - show_vendor: {Boolean} Show the product vendor. Default: false
  - show_rating: {Boolean} Show the product rating. Default: false
  - extend_height: {Boolean} Card height extends to available container space. Default: true (optional)
  - lazy_load: {Boolean} Image should be lazy loaded. Default: true (optional)
  - show_quick_add: {Boolean} Show the quick add button.
  - section_id: {String} The ID of the section that contains this card.
  - horizontal_class: {Boolean} Add a card--horizontal class if set to true. Default: false

  Usage:
  {% render 'card-product', show_vendor: section.settings.show_vendor %}
{% endcomment %}

{%- if article and article != empty -%}
  {%- liquid
    assign ratio = 1
    if article.image and media_aspect_ratio == 'portrait'
      assign ratio = 0.8
    elsif article.image and media_aspect_ratio == 'adapt'
      assign ratio = article.image.aspect_ratio
    endif
    if ratio == 0 or ratio == nil
      assign ratio = 1
    endif
  -%}
  <div class="recipe__hover-wrap">
    {{ article.excerpt }}
    <span class="bar-name">Difficulty:</span><p>{{ article.metafields.custom.difficulty }}</p>
    <span class="bar-name">Style:</span><p>{{ article.metafields.custom.style }}</p>
  </div>
  <div class="card-wrapper product-card-wrapper underline-links-hover">
    <div
      class="
        card
        card--{{ settings.card_style }}
        {% if article.image %} card--media{% else %} card--text{% endif %}
        {% if settings.card_style == 'card' %} color-{{ settings.card_color_scheme }} gradient{% endif %}
        {% if extend_height %} card--extend-height{% endif %}
        {% if article.image == nil and settings.card_style == 'card' %} ratio{% endif %}
        {% if horizontal_class %} card--horizontal{% endif %}
      "
      style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
    >
      <div
        class="card__inner {% if settings.card_style == 'standard' %}color-{{ settings.card_color_scheme }} gradient{% endif %}{% if article.image or settings.card_style == 'standard' %} ratio{% endif %}"
        style="--ratio-percent: 125%;"
      >
        {%- if article.image -%}
          <div class="card__media">
            <div class="media media--transparent media--hover-effect">
              {% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
              <img
                srcset="
                  {%- if article.image.width >= 165 -%}{{ article.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if article.image.width >= 360 -%}{{ article.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if article.image.width >= 533 -%}{{ article.image | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if article.image.width >= 720 -%}{{ article.image | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if article.image.width >= 940 -%}{{ article.image | image_url: width: 940 }} 940w,{%- endif -%}
                  {%- if article.image.width >= 1066 -%}{{ article.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                  {{ article.image | image_url }} {{ article.image.width }}w
                "
                src="{{ article.image | image_url: width: 533 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                alt="{{ article.image.alt | escape }}"
                class="motion-reduce"
                {% unless lazy_load == false %}
                  loading="lazy"
                {% endunless %}
                width="{{ article.image.width }}"
                height="{{ article.image.height }}"
              >
              {% comment %}theme-check-enable ImgLazyLoading{% endcomment %}

              {%- if article.media[1] != nil and show_secondary_image -%} {% comment %} anchor {% endcomment %}
                <img
                  srcset="
                    {%- if article.media[1].width >= 165 -%}{{ article.media[1] | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if article.media[1].width >= 360 -%}{{ article.media[1] | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if article.media[1].width >= 533 -%}{{ article.media[1] | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if article.media[1].width >= 720 -%}{{ article.media[1] | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if article.media[1].width >= 940 -%}{{ article.media[1] | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if article.media[1].width >= 1066 -%}{{ article.media[1] | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {{ article.media[1] | image_url }} {{ article.media[1].width }}w
                  "
                  src="{{ article.media[1] | image_url: width: 533 }}"
                  sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                  alt=""
                  class="motion-reduce"
                  loading="lazy"
                  width="{{ article.media[1].width }}"
                  height="{{ article.media[1].height }}"
                >
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
        <div class="card__content">
          <div class="card__information">
            <h3
              class="card__heading"
              {% if article.image == nil and settings.card_style == 'standard' %}
                id="title-{{ section_id }}-{{ article.id }}"
              {% endif %}
            >
              <a
                href="{{ article.url }}"
                id="StandardCardNoMediaLink-{{ section_id }}-{{ article.id }}"
                class="full-unstyled-link"
                aria-labelledby="StandardCardNoMediaLink-{{ section_id }}-{{ article.id }} NoMediaStandardBadge-{{ section_id }}-{{ article.id }}"
              >
                {{ article.title | escape }} 
              </a>
            </h3>
          </div>
        </div>
      </div>
      <div class="card__content">
        <div class="card__information">
          <h2>{{ article.metafields.custom.bar_name }}</h2>
          <h3
            class="card__heading{% if article.image or settings.card_style == 'standard' %} h5{% endif %}"
            {% if article.image or settings.card_style == 'card' %}
              id="title-{{ section_id }}-{{ article.id }}"
            {% endif %}
          >
            <a
              href="{{ article.url }}"
              id="CardLink-{{ section_id }}-{{ article.id }}"
              class="full-unstyled-link"
              aria-labelledby="CardLink-{{ section_id }}-{{ article.id }} Badge-{{ section_id }}-{{ article.id }}"
            >
              {{ article.title | escape }} 
            </a>
          </h3>
          <div class="card-information">
            {%- if show_vendor -%}
              <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
              <div class="caption-with-letter-spacing light">{{ article.vendor }}</div>
            {%- endif -%}

            <span class="caption-large light">{{ block.settings.description | escape }}</span>

            {%- if show_rating and article.metafields.reviews.rating.value != blank -%}
              {% liquid
                assign rating_decimal = 0
                assign decimal = article.metafields.reviews.rating.value.rating | modulo: 1
                if decimal >= 0.3 and decimal <= 0.7
                  assign rating_decimal = 0.5
                elsif decimal > 0.7
                  assign rating_decimal = 1
                endif
              %}
              <div
                class="rating"
                role="img"
                aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: article.metafields.reviews.rating.value, rating_max: article.metafields.reviews.rating.value.scale_max }}"
              >
                <span
                  aria-hidden="true"
                  class="rating-star color-icon-{{ settings.accent_icons }}"
                  style="--rating: {{ article.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ article.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
                ></span>
              </div>
              <p class="rating-text caption">
                <span aria-hidden="true">
                  {{- article.metafields.reviews.rating.value }} /
                  {{ article.metafields.reviews.rating.value.scale_max -}}
                </span>
              </p>
              <p class="rating-count caption">
                <span aria-hidden="true">({{ article.metafields.reviews.rating_count }})</span>
                <span class="visually-hidden">
                  {{- article.metafields.reviews.rating_count }}
                  {{ "accessibility.total_reviews" | t -}}
                </span>
              </p>
            {%- endif -%}
          </div>
        </div>
    </div>
  </div>
{%- else -%}
  <div class="product-card-wrapper card-wrapper underline-links-hover">
    <div
      class="
        card
        card--{{ settings.card_style }}
        card--text
        {% if extend_height %} card--extend-height{% endif %}
        {% if settings.card_style == 'card' %} color-{{ settings.card_color_scheme }} gradient{% endif %}
        {% if article.image == nil and settings.card_style == 'card' %} ratio{% endif %}
        {{ horizontal_class }}
      "
      style="--ratio-percent: 100%;"
    >
      <div
        class="card__inner {% if settings.card_style == 'standard' %}color-{{ settings.card_color_scheme }} gradient{% endif %}{% if settings.card_style == 'standard' %} ratio{% endif %}"
        style="--ratio-percent: 100%;"
      >
        <div class="card__content">
          <div class="card__information">
            <h3 class="card__heading">
              <a role="link" aria-disabled="true" class="full-unstyled-link">
                {{ 'onboarding.product_title' | t }}
              </a>
            </h3>
          </div>
        </div>
      </div>
      <div class="card__content">
        <div class="card__information">
          <h3 class="card__heading{% if settings.card_style == 'standard' %} h5{% endif %}">
            <a role="link" aria-disabled="true" class="full-unstyled-link">
              {{ 'onboarding.product_title' | t }}
            </a>
          </h3>
          <div class="card-information">
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}