<section class="process-section">
  <div class="process-wrapper">
    
    
    <div class="process-image">
      {% if section.settings.process_image %}
        <img 
          src="{{ section.settings.process_image | img_url: 'master' }}" 
      {% endif %}
    </div>

    <div class="process-content">

        <h2 class="process-heading">{{ section.settings.heading }}</h2>
      

      <div class="process-steps">
         <div class="process-step">
              <span class="step-number">{{ i }}.</span>
              <p class="step-text">{{ step_text }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .process-wrapper {
    display:flex;
    align-items: start;
    flex-direction: column; 
    height: 100%;
    gap: 2rem;
  }

  .process-image{
    border: solid 1px purple;
    width: 40%;
    height: 100%;
}

  .process-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

 

  .process-heading {
    font-family: "Century Schoolbook";
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .process-step {
    position: relative;
    padding-left: 1.5rem;
  }

  .step-number {
    font-weight: 500;
    position: absolute;
    left: 0;
    top: 0;
  }
</style>

{% schema %}
{
  "name": "Process Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "process_image",
      "label": "Process Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Process"
    },
    {
      "type": "textarea",
      "id": "step_1",
      "label": "Step 1"
    },
    {
      "type": "textarea",
      "id": "step_2",
      "label": "Step 2"
    },
    {
      "type": "textarea",
      "id": "step_3",
      "label": "Step 3"
    },
    {
      "type": "textarea",
      "id": "step_4",
      "label": "Step 4"
    },
    {
      "type": "textarea",
      "id": "step_5",
      "label": "Step 5 (optional)"
    }
  ],
  "presets": [
    {
      "name": "Process Section"
    }
  ]
}
{% endschema %}
