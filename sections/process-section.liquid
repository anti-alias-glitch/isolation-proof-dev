<section class="process-section">
  <div class="process-wrapper">
    
        <div class="process-image">
            <img src="{{ section.settings.process_image | img_url: 'master' }}">
        </div>
        <div class="process-heading-div">
            <h2 class="process-heading">{{ section.settings.heading }}</h2>
        </div>

        <div class="process-content">
                   

                    <div class="process-steps">
                        <div class="col1">

                              <div class="process-step">
                            <div class="dot"></div>
                            <div class="text">
                                <p class="number">1.</p>
                                <p>Start with 190 proof corn neutral spirit from Finger Lakes, NY</p>
                            </div>
                            </div>

                    

                              <div class="process-step">
                                <div class="dot"></div>
                                <div class="text">
                                    <p class="number">3.</p>
                                    <p>Overnight maceration at 180Â°F</p>
                                </div>
                            </div>
                        
                             <div class="process-step">
                            <div class="dot"></div>
                            <div class="text">
                                <p class="number">5.</p>
                                <p>Optional fifth step text here.</p>
                            </div>
                            </div>
                        
                        </div>

                     

                        <div class="col2">

                            <div class="process-step">
                                <div class="dot"></div>
                                <div class="text">
                                    <p class="number">2.</p>
                                    <p>Dilute to 100 proof with our mountain spring water</p>
                                </div>
                            </div>
                            <div class="process-step">
                            <div class="dot"></div>
                            <div class="text">
                                <p class="number">4.</p>
                                <p>Start drinking!</p>
                            </div>
                            </div>
                           
                        </div>
                        
                         
                    </div>
        </div>
  </div>
</section>

<style>


  .process-wrapper {
    display:flex;
    flex-direction: row; 
    height: 100%;
    gap: 2rem;
    border-bottom: 1px solid purple; 
    align-items: center;
  }

    .process-image{
    width: 40%;
    height: 100%;
    padding: .9em;

}
.process-image img {
  width: 100%;
  height: auto;
  object-fit: cover;
  {% comment %} display: block; {% endcomment %}
}


 .process-content{
    display:flex;
    border: solid 1px green;
    height: 100%;
}

 .process-heading-div {
    align-self:flex-start;
    margin-top: 5rem;
  }
   .process-heading {
    font-family: "Century Schoolbook";
    font-weight: 400;
    text-transform: uppercase;
  }

  .process-steps {
  position: relative;
  display: flex;
  flex-direction: row;
  height: 500px; /* Adjust height so spacing scales */
  {% comment %} padding-left: 1.5rem; {% endcomment %}
}

.col1, .col2{
width: 50%;
height:100%;
}
.col1{
border-right: 1px dashed #473F21;
padding-right: 15px;
display:flex;
flex-direction: column;
 gap:88px;  {% comment %} should we make this a slider  {% endcomment %}
align-items: flex-end;
}

.col2{
padding-left: 15px;
padding-top: 85px;
flex-direction: column;
display:flex;
 gap:88px;  {% comment %} should we make this a slider  {% endcomment %}

}

.col1 p{
text-align: right;
}

.process-step{
width: 65%;}

.process-step .dot {
  position: absolute;
  left: -6px;
  top: 0.5rem;
  width: 8px;
  height: 8px;
  background: #333;
  border-radius: 50%;
}

.process-step .number {
    font-family: 'Century Schoolbook';
    font-size: 17px;
}

.process-step p {
    font-family: 'Futura';
    font-size: 17px;
  margin: 0;
  line-height: 1.5;
  max-width: 280px;
}






  .step-number {
    font-weight: 500;
    position: absolute;
    left: 0;
    top: 0;
  }




{% comment %} 
.col2{
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 500px;
    border-left: 1px dotted #444;
    padding-left: 1.5rem;}

 {% endcomment %}
</style>

{% schema %}
{
  "name": "Process Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "process_image",
      "label": "Process Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Process"
    },
    {
      "type": "textarea",
      "id": "step_1",
      "label": "Step 1"
    },
    {
      "type": "textarea",
      "id": "step_2",
      "label": "Step 2"
    },
    {
      "type": "textarea",
      "id": "step_3",
      "label": "Step 3"
    },
    {
      "type": "textarea",
      "id": "step_4",
      "label": "Step 4"
    },
    {
      "type": "textarea",
      "id": "step_5",
      "label": "Step 5 (optional)"
    }
  ],
  "presets": [
    {
      "name": "Process Section"
    }
  ]
}
{% endschema %}
