{{ 'process-section.css' | asset_url | stylesheet_tag }}

  
{%- liquid assign article = section.settings.article -%}

<div class = " color-{{  section.settings.color_scheme }} main-content" >

  <div class = "column1" style="background-image:url({{ section.settings.article.image | image_url }});" >
 
  </div>

  <div class="column2">
      <h2>{{ section.settings.article.title }}</h2>
  </div>
          

</div>
{% schema %}
    {
    "name": "Process",
    "class":"Process",
    "settings": [
        {
      "type": "article", //?? 
      "id": "article",
      "label": "Article"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "accent 1"      
        },
         {
          "value": "accent-2",
          "label": "accent 2"      
        },
         {
          "value": "background-1",
          "label": "background 1"      
        },  
        {
          "value": "background-2",
          "label": "background 2"      
        },
        {
          "value": "inverse",
          "label": "inverse"      
        }
      ],
      "default": "background-1",
      "label": "color scheme"
    },
    {
        "type": "range",
        "id": "opacity",
        "max": 100,
        "min": 0,
        "label": "Image Opacity",
        "default": 100
    },
   
    ],
    "presets": [
        {
        "name": "Process"
        }
    ]

    }
{% endschema %}




