{{ 'process-section.css' | asset_url | stylesheet_tag }}

<section class="process-section">
  <div class="process-wrapper">
    
        <div class="process-image">
            <img src="{{ section.settings.process_image | img_url: 'master' }}">
        </div>
        <div class="process-heading-div">
            <h2 class="process-heading">{{ section.settings.heading }}</h2>
        </div>

        <div class="process-content">
                   

                    <div class="process-steps">
                        <div class="col1">

                            <div class="process-step">
                                <div class="text">
                                    <p class="number">1.</p>
                                    <p>Start with 190 proof corn neutral spirit from Finger Lakes, NY</p>
                                </div>
                                <div class="dot1"> </div>

                            </div>

                    

                            <div class="process-step">
                             
                                <div class="text">
                                    <p class="number">3.</p>
                                    <p>Overnight maceration at 180Â°F</p>
                                </div>
                                <div class="dot3"> </div>
                            </div>
                        
                             <div class="process-step">
                            <div class="dot5"> </div>
                            <div class="text">
                                <p class="number">5.</p>
                                <p>Optional fifth step text here.</p>
                            </div>
                            </div>
                        
                        </div>

                     <div class="divider">
                        
                     </div>

                        <div class="col2">

                            <div class="process-step">
                                <div class="dot2"> </div>
                                <div class="text">
                                    <p class="number">2.</p>
                                    <p>Dilute to 100 proof with our mountain spring water</p>
                                </div>
                            </div>
                            <div class="process-step">
                            <div class="dot4"> </div>
                            <div class="text">
                                <p class="number">4.</p>
                                <p>Start drinking!</p>
                            </div>
                            </div>
                           
                        </div>
                        
                         
                    </div>
        </div>
  </div>
</section>



{% schema %}
{
  "name": "Process Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "process_image",
      "label": "Process Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Process"
    },
    {
      "type": "textarea",
      "id": "step_1",
      "label": "Step 1"
    },
    {
      "type": "textarea",
      "id": "step_2",
      "label": "Step 2"
    },
    {
      "type": "textarea",
      "id": "step_3",
      "label": "Step 3"
    },
    {
      "type": "textarea",
      "id": "step_4",
      "label": "Step 4"
    },
    {
      "type": "textarea",
      "id": "step_5",
      "label": "Step 5 (optional)"
    }
  ],
  "presets": [
    {
      "name": "Process Section"
    }
  ]
}
{% endschema %}
