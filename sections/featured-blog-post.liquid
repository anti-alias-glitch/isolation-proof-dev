{% comment %} featured article section  {% endcomment %}
{{ 'featured-product-hero.css' | asset_url | stylesheet_tag }}

  
{%- liquid assign article = section.settings.article -%}

<div class = "{{ section.name }} main-content" style="color: #EFE5D1; padding: 14em 0vw 4em 0vw ; background-image:url({{ section.settings.article.image | image_url }}); width: 100%; height: 700px;background-size:cover; opacity: 0.9; display:flex; flex-direction:column; justify-content:space-between" class="featured_article__section">

  <div style="width: 95%;
              align-self:center;
              font-size: calc(1.25em);
      
              font-weight: 400;
              line-height: 110%; 
              text-transform: uppercase;
              font-family: 'Saa Series';
              border-bottom: 1px solid #EFE5D1;
              padding: 0px 3px 5px 3px; 
              display:flex; 
              justify-content:space-between">
    <div>
      <a class="field-notes"  style="text-transform:uppercase">Field Notes</a>
    </div>
    <div>{{ article.created_at | date: '%m.%d.%Y' }}</div>
    <div>Town</div>
    <div> {{ article.metafields.custom.location.value.town }} </div>
  </div>

  <div style="width: 95%; align-self:center; display:flex; justify-content:space-between;">
      <div> <h2 style="color: #EFE5D1; font-family: 'Futura'; font-size: 42.527px; font-style: normal; font-weight: 400; line-height: 110%;">{{ article.title }}</h2></div>
        <button  style="font-family:Century Schoolbook; background-color: #F9F1E0; color: #473F21; text-transform:uppercase; font-weight: 600; font-size: 19px; box-shadow: none; border: none ; width: 160px; padding: 9px 25px 9px 25px; border-radius: 30px;"> Read More </button>
  </div>
          

</div>
{% schema %}
    {
    "name": "Featured Article",
    "settings": [
        {
      "type": "article",
      "id": "article",
      "label": "Article"
    },
    {
      "type": "image_picker",
      "id": "background-image",
      "label": "Background Image"
    },
    {
        "type": "range",
        "id": "opacity",
        "max": 100,
        "min": 0,
        "label": "Image Opacity",
        "default": 100
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default":"#000000"
    }
    ],
    "presets": [
        {
        "name": "Featured Article"
        }
    ]

    }
{% endschema %}