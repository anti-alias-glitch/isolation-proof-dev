{% comment %} featured article section  {% endcomment %}
{{ 'featured-product-hero.css' | asset_url | stylesheet_tag }}

<div width=100% height=500px class="featured_article__section">
  
    <div  width=100% height=auto class="image_wrapper_article__section">
        <img width=100% height=600px style="object-fit: cover" src="{{ section.settings.article.image | image_url }}">
    </div>

  <div style="position:absolute">
      {{ section.settings.article.published_at}}
        {{ section.settings.article.metafields.custom.location }}
          {{ section.settings.article.title }}
            {{ section.settings.article.title }}

  </div>
</div>
{% schema %}
    {
    "name": "Featured Article",
    "settings": [
        {
      "type": "article",
      "id": "article",
      "label": "Article"
    },
    {
      "type": "image_picker",
      "id": "background-image",
      "label": "Background Image"
    },
    {
        "type": "range",
        "id": "opacity",
        "max": 100,
        "min": 0,
        "label": "Image Opacity",
        "default": 100
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default":"#000000"
    }
    ],
    "presets": [
        {
        "name": "Featured Article"
        }
    ]

    }
{% endschema %}