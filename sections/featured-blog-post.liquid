{% comment %} featured article section  {% endcomment %}
{{ 'featured-product-hero.css' | asset_url | stylesheet_tag }}

<div style="color: #EFE5D1; padding: 7em 0vw 7em 0vw ; background-image:url({{ section.settings.article.image | image_url }}); width: 100%; height: 600px; background-size:cover; display:flex; flex-direction:column; justify-content:space-between" class="featured_article__section">
  
   

  <div style="border: 1px solid red; display:flex; gap: 50px;">
    <div class="field-notes" style="text-transform:uppercase">Field Notes</div>
    <div>{{ section.settings.article.created_at | date: '%m.%d.%Y' }}</div>
    {% comment %} <div>{{ section.settings.article.metafields.custom.location.value}}</div> {% endcomment %}
    <div>Town</div>
    <div>City</div>
  </div>

  <div style="border: 1px solid red; display:flex; gap: 50px;">
        <div> {{ section.settings.article.title }}</div>
        <button> Read More </button>
  </div>
          

  </div>
{% schema %}
    {
    "name": "Featured Article",
    "settings": [
        {
      "type": "article",
      "id": "article",
      "label": "Article"
    },
    {
      "type": "image_picker",
      "id": "background-image",
      "label": "Background Image"
    },
    {
        "type": "range",
        "id": "opacity",
        "max": 100,
        "min": 0,
        "label": "Image Opacity",
        "default": 100
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default":"#000000"
    }
    ],
    "presets": [
        {
        "name": "Featured Article"
        }
    ]

    }
{% endschema %}